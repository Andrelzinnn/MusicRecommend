package com.andrelzinn.musicrecommend;

import com.andrelzinn.musicrecommend.music.Music;
import com.andrelzinn.musicrecommend.spotify.SpotifyClient;

import com.google.gson.Gson;

public class App {
    public static void main(String[] args) {
        SpotifyClient spotify = new SpotifyClient();
        Gson gson = new Gson();
      try {
            String json = spotify.getMusicFromApi("https://api.spotify.com/v1/tracks/3n3Ppam7vgaVa1iaRUc9Lp");
            
            Music music = gson.fromJson(json, Music.class);
            System.out.println("Deu Bom");
            System.out.println(music);
            System.out.println("Cabou");
        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            SpotifyClient.shutdown();
        }
    }
}

